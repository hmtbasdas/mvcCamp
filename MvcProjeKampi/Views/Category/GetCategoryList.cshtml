@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3>Mvc Camp Category Table Example</h3>
<br />

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
        </tr>
    }

</table>
<a href="/Category/AddCategory" class="btn btn-success">Create New Category</a>
<button class="btn btn-warning">Category List</button>
<button class="btn btn-danger">Category Descriptions</button>